<%- model_class = Kitten -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @kitten.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:age) %>:</strong></dt>
  <dd><%= @kitten.age %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cuteness) %>:</strong></dt>
  <dd><%= @kitten.cuteness %></dd>
  <dt><strong><%= model_class.human_attribute_name(:softness) %>:</strong></dt>
  <dd><%= @kitten.softness %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              kittens_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_kitten_path(@kitten), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              kitten_path(@kitten),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
